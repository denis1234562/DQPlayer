<Window x:Name="Window" x:Class="DQPlayer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DQPlayer"
        mc:Ignorable="d"
        Title="MainWindow" Height="380.685" Width="525" AllowDrop="True" Drop="Window_Drop">
    <Grid AllowDrop="True">
        <MediaElement Name="Player" HorizontalAlignment="Left" Height="262" Margin="10,10,0,0" VerticalAlignment="Top" Width="500"/>
        <Button Name="bChangeStatePlayer"  Content="Loading.." HorizontalAlignment="Left" Margin="10,313,0,0" VerticalAlignment="Top" Width="75" 
                Click="bChangeStatePlayer_Click"/>
        
        <Button Name ="bBrowse" Content="Loading.." HorizontalAlignment="Left" Margin="90,313,0,0" VerticalAlignment="Top" Width="75" 
                Click="bBrowse_Click"/>
        
        <Slider Name="sVolumeSlider" Minimum="0" Maximum="1" HorizontalAlignment="Left" Margin="399,313,0,0" VerticalAlignment="Top" Width="100"
                Value="{Binding Path=Volume, ElementName=Player}"/>

        <Slider Name="sMovieSkipSlider" HorizontalAlignment="Left" Height="25" Margin="10,283,0,0" VerticalAlignment="Top" Width="497"
                ValueChanged ="SMovieSkipSlider_OnValueChanged"/>
    </Grid>
</Window>
